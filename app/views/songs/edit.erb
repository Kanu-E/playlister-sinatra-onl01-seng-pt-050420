
<h1>Edit <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="POST">
<input type="hidden" name="_method" value="PATCH">
<label>Artist Name</label>
<input type="text" name="Artist Name" value="<%= @song.artist.name %>"><br>
<label>Song Name</label>
<input type="text" name="Name" value="<%= @song.name %>"><br>
<label>Genres:</label><br>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="song[genres][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>>
    <%= genre.name %>
    </input>
    <br>
  <% end %>
<input type="submit" value="Save">
</form>